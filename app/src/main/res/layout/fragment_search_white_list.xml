<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SearchWhiteListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            app:title="Search app"
            android:id="@+id/toolbar_white_list_search"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            />

        <EditText
            android:id="@+id/edit_text_search_white_list_search"
            android:background="@drawable/border_edit_text"
            android:drawableStart="@drawable/bitmap_ic_search"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:hint="Search..."
            android:lines="1"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:focusable="false" />


    </LinearLayout>

</FrameLayout>