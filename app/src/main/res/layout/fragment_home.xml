<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="87dp"
            android:layout_height="114dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="78dp"
            android:src="@drawable/ic_clock"
            android:id="@+id/img_home_clock"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/img_home_clock"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="70dp"
            android:id="@+id/liner_home_clock"
            tools:ignore="MissingConstraints">
            <EditText
                android:id="@+id/edit_text_home_mins"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/edit_text_border_radius"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:maxLength="2"
                android:inputType="number"
                android:nextFocusRight="@+id/edit_text_home_second"
                android:hint="00"
                android:textColorHint="@color/gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:layout_marginHorizontal="8dp"
                />
            <EditText
                android:id="@+id/edit_text_home_second"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/edit_text_border_radius"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:maxLength="2"
                android:inputType="number"
                android:hint="00"
                android:textColorHint="@color/gray"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nowhere to go back, focus on your work"
            app:layout_constraintTop_toBottomOf="@+id/liner_home_clock"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:id="@+id/text_home_dest"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_home_dest"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:text="Stop your freedom (9)"
            app:backgroundTint="@color/black"
            android:paddingHorizontal="25dp"
            android:paddingVertical="12dp"
            android:elevation="0dp"
            android:background="@drawable/primary_button_background"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>