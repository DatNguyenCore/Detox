<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_home_clock"
            android:layout_width="87dp"
            android:layout_height="114dp"
            android:layout_marginTop="58dp"
            android:src="@drawable/ic_clock"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_title_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Select time"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_home_clock" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/liner_home_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_home_clock"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Hours"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_text_home_hours"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/edit_text_border_radius"
                    android:gravity="center"
                    android:hint="00"
                    android:inputType="number"
                    android:maxLength="2"
                    android:nextFocusRight="@+id/edit_text_home_minus"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="35dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Minutes"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_text_home_minus"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/edit_text_border_radius"
                    android:gravity="center"
                    android:hint="00"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_home_start"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_button_background"
            android:elevation="0dp"
            android:text="Start"
            android:layout_marginTop="16dp"
            app:backgroundTint="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/liner_home_clock"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_home_start">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_home_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border_card_home"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_home_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="10 minutes"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/constraint_home_card"
                    app:layout_constraintTop_toTopOf="@+id/constraint_home_card" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:text="Do housework, go for a walk,
                    let the dog go to the toilet"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button_home_start_time"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="@+id/constraint_home_card"
                    app:layout_constraintRight_toLeftOf="@+id/button_home_start_time"
                    app:layout_constraintStart_toStartOf="@+id/text_home_card_title"
                    app:layout_constraintTop_toBottomOf="@+id/text_home_card_title" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_home_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_button_background"
                    android:elevation="0dp"
                    android:text="Start"
                    app:backgroundTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_home_card_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border_card_home"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_home_card_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="20 minutes"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/constraint_home_card_2"
                    app:layout_constraintTop_toTopOf="@+id/constraint_home_card_2" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:text="Reading books,  take a bath"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button_home_start_time_2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="@+id/constraint_home_card_2"
                    app:layout_constraintRight_toLeftOf="@+id/button_home_start_time_2"
                    app:layout_constraintStart_toStartOf="@+id/text_home_card_title_2"
                    app:layout_constraintTop_toBottomOf="@+id/text_home_card_title_2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_home_start_time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_button_background"
                    android:elevation="0dp"
                    android:text="Start"
                    app:backgroundTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_home_card_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border_card_home"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_home_card_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="1 hour"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/constraint_home_card_3"
                    app:layout_constraintTop_toTopOf="@+id/constraint_home_card_3" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="42dp"
                    android:text="Working, jogging in the park, cooking at home"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button_home_start_time_3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="@+id/constraint_home_card_3"
                    app:layout_constraintStart_toStartOf="@+id/text_home_card_title_3"
                    app:layout_constraintTop_toBottomOf="@+id/text_home_card_title_3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_home_start_time_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_button_background"
                    android:elevation="0dp"
                    android:text="Start"
                    app:backgroundTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>