<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.WhiteListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            app:title="White list"
            android:id="@+id/toolbar_white_list"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


        <LinearLayout
            android:id="@+id/linear_white_list_buttons_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingBottom="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_white_list"

            >

            <Button
                android:id="@+id/btn_white_list_app_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/border_dash"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:backgroundTint="@color/backgroundColor" />

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/border_dash"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:backgroundTint="@color/backgroundColor" />

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/border_dash"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:backgroundTint="@color/backgroundColor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_white_list_buttons_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingBottom="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_white_list_buttons_first"
            >

            <Button
                android:id="@+id/btn_white_list_app_4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/border_dash"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:backgroundTint="@color/backgroundColor" />

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/border_dash"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:backgroundTint="@color/backgroundColor" />

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/border_dash"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:backgroundTint="@color/backgroundColor" />

        </LinearLayout>

        <EditText
            android:id="@+id/edit_text_search_white_list"
            android:background="@drawable/border_edit_text"
            android:drawableStart="@drawable/bitmap_ic_search"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:layout_width="match_parent"
            android:hint="Search..."
            android:lines="1"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@+id/linear_white_list_buttons_second"
            app:layout_constraintVertical_bias="0.0" />

        <ListView
            android:id="@+id/list_view_white_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_search_white_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>